{
  "name": "typescript-challenges",
  "version": "0.0.1",
  "description": "A set of challenges helping you understand basics of TypeScript",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix --report-unused-disable-directives --max-warnings=-1 ./src/**/*.ts",
    "test:warm-up": "tsc src/warm-up/warm-up.ts --outFile src/warm-up/warm-up.test.js && jest src/warm-up",
    "test:media": "tsc src/media/media.ts --outFile src/media/media.test.js && jest src/media",
    "test:shortcuts": "tsc src/shortcuts/shortcuts.ts --outFile src/shortcuts/shortcuts.test.js && jest src/shortcuts",
    "test:this-or-that": "tsc src/this-or-that/this-or-that.ts --outFile src/this-or-that/this-or-that.test.js && jest src/this-or-that",
    "test:only-one": "tsc src/only-one/only-one.ts --outFile src/only-one/only-one.test.js && jest src/only-one",
    "test:new-skills": "tsc src/new-skills/new-skills.ts --outFile src/new-skills/new-skills.test.js && jest src/new-skills",
    "test:constraints": "tsc src/constraints/constraints.ts --outFile src/constraints/constraints.test.js && jest src/constraints"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psmyrdek/typescript-challenges.git"
  },
  "keywords": [
    "typescript",
    "knowledge sharing",
    "github"
  ],
  "author": "psmyrdek",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/psmyrdek/typescript-challenges/issues"
  },
  "homepage": "https://github.com/psmyrdek/typescript-challenges#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@typescript-eslint/typescript-estree": "^4.29.1",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "typescript": "^4.3.5"
  }
}
